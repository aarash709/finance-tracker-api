generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
  // output        = "../generated/prisma"
  // output        = "../prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      Int       @id @default(autoincrement())
  // display_name                String //first name + last name
  first_name              String?
  last_name               String?
  phoneNumber             String?   @unique
  phoneNumberVerifiedDate DateTime?
  email                   String    @unique
  emailVerifiedDate       DateTime?
  role                    Role      @default(USER)

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  Account            Account[]
  UserAuthentication UserAuthentication[]
  Budget             Budget[]
  Category           Category[]
}

model UserAuthentication {
  id                Int      @id @default(autoincrement())
  userId            Int
  user              User     @relation(fields: [userId], references: [id])
  provider          Provider
  // providerUserId    Int
  password_hash     String?
  accesstoken_token String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, provider])
}

enum Provider {
  LOCAL
  GOOGLE
}

model Account {
  id   Int         @id @default(autoincrement())
  name String // e.g., "Cash", "Credit Card", "Wallet"
  type AccountType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int

  user                 User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions         Transaction[]
  RecurringTransaction RecurringTransaction[]

  @@unique([userId, name])
}

model Transaction {
  id          Int      @id @default(autoincrement())
  date        DateTime @default(now())
  amount      Decimal  @db.Decimal(10, 2) // Always positive
  description String?

  type TransactionType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categoryId             String?
  accountId              Int
  recurringTransactionId String?

  account              Account               @relation(fields: [accountId], references: [id], onDelete: Cascade)
  Category             Category?             @relation(fields: [categoryId], references: [id])
  RecurringTransaction RecurringTransaction? @relation(fields: [recurringTransactionId], references: [id])

  @@index([date])
  @@index([accountId, date])
}

model RecurringTransaction {
  id          String             @id @default(uuid())
  amount      Float
  description String?
  frequency   RecurringFrequency
  nextDate    DateTime
  categoryId  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accountId Int
  userId    Int // For ownership

  account      Account       @relation(fields: [accountId], references: [id], onDelete: Cascade)
  category     Category?     @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  transactions Transaction[] // One-to-many: Generates actual transactions
}

model Budget {
  id        String       @id @default(uuid())
  amount    Float
  period    BudgetPeriod // NEW ENUM: e.g., MONTHLY, YEARLY
  startDate DateTime
  endDate   DateTime?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  userId     Int
  categoryId String

  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Category {
  id        String        @id @default(uuid())
  name      String
  type      CategoryType?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  userId Int?
  user   User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  transactions         Transaction[]
  budgets              Budget[]
  RecurringTransaction RecurringTransaction[]
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum AccountType {
  // Primary Liquid Accounts
  CHECKING
  SAVINGS

  // Debt/Liability Accounts
  CREDIT_CARD
  LOAN // Includes personal loans, mortgages, student loans, etc.

  // Investment/Asset Accounts
  INVESTMENT // Brokerage, 401k, IRA, general stock/crypto portfolios
  ASSET // Non-liquid assets like real estate, vehicles, or high-value collectibles

  // Physical/Non-Bank Accounts
  CASH // Physical cash held by the user

  // General Catch-all
  OTHER // For miscellaneous accounts (e.g., gift cards, PayPal balance, prepaid cards)
}

enum Role {
  ADMIN
  USER
}

enum BudgetPeriod {
  WEEKLY
  MONTHLY
  QUARTERLY
  YEARLY
  ONCE
}

enum CategoryType {
  INCOME
  EXPENSE
}

enum RecurringFrequency {
  DAILY
  WEEKLY
  BIWEEKLY
  MONTHLY
  YEARLY
}
